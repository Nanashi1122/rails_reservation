 <h3>予約一覧</h3>
 
 <table>
   <thead>
     <tr>
       <th>施設名</th>
       <th>施設紹介</th>
       <th>合計金額</th>
       <th>チェックイン日</th>
       <th>チェックアウト日</th>
       <th>予約確定日時</th>
       <th>施設画像</th>
     </tr>
   </thead>
 
   <tbody>
     <% @reservations.each do |reservation| %>
       <% if reservation.user_id == current_user.id %>
         <tr>
           <td><%= reservation.room.name %></td>
           <td><%= reservation.room.introduction %></td>
           <td><%= reservation.room.fee * reservation.num_of_people * reservation.total_nights %></td>
           <td><%= reservation.checkin %></td>
           <td><%= reservation.checkout %></td>
           <td><%= reservation.created_at.strftime("%Y/%m/%d %H:%M") %></td>
           <% if reservation.room.room_image.attached? %>
             <td><%= image_tag reservation.room.room_image %></td>
         <% else %>
             <td><%= image_tag 'default-room.png' %></td>
         <% end%>
         </tr>
      <% end %>
     <% end %>
   </tbody>
 </table>