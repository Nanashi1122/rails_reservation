<!DOCTYPE html>
<html>
  <head>
    <title>Reservationapp</title>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' %>
          
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand d-flex align-items-center" href="/">P.Travel</a>
          <% if user_signed_in? %>
            <div class="collapse navbar-collapse justify-content-end">
              <ul class="navbar-nav d-flex align-items-center">
                <li class="nav-item p-4">
                  <%= link_to "登録施設一覧",  rooms_path, class: 'text-light' %>
                </li>
                <li class= "nav-item p-4">
                  <%= link_to "施設検索", search_rooms_path, class: 'text-light' %>
                </li>
                <li class="nav-item dropdown p-4">
                  <button id="btnOpenMenu" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= current_user.name %>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end">
                    <li><%= link_to "施設登録", "/rooms/new" %></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to "予約済み一覧", "/reservations/myreservation" %></li>
                    <li><%= link_to "登録済み一覧", "/rooms/myroom" %></li>
                    <li><%= link_to "アカウント設定", "/users/show" %></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                  </ul>
                </li>
                <li>
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar, style: "border-radius: 50%; width: 40px; height: 40px; object-fit:cover;" %><br>
                <% else %>
                  <%= image_tag 'default-avatar.png', style: "width: 40px; height: 40px" %>
                <% end %>
                </li>
              </ul>
            </div>
          <% else %>
            <div class="collapse navbar-collapse justify-content-end">
              <ul class="navbar-nav d-flex align-items-center">
                <li class="nav-item p-4"><%= link_to "ログイン", "/users/sign_in" %></li>
                <li class="nav-item p-4"><%= link_to "新規登録", "/users/sign_up" %></li>
              </ul>
            </div>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' %> 
  </body>
</html>