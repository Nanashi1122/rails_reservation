 <h3>施設詳細</h3>
 
 <table>
     <tr>
        <th>名前</th>
        <td><%= @room.name %></td>
     </tr>
     <tr>
        <th>紹介</th>
        <td><%= @room.introduction %></td>
     </tr>
     <tr>
        <th>金額</th>
        <td><%= @room.fee %></td>
     </tr>
     <tr>
        <th>エリア</th>
        <td><%= @room.address %></td>
     </tr>
     <tr>
        <th>住所</th>
        <td><%= @room.address %></td>
     </tr>
     <tr>
        <th>画像</th>
        <% if @room.room_image.attached? %>
               <td><%= image_tag @room.room_image %></td>
        <% else %>
               <td><%= image_tag 'default-room.png' %></td>
        <% end%>
     </tr>
 </table>

  <div>
   <ul>
     <li><%= link_to "施設一覧に戻る", :rooms %></li>
   </ul>
 </div>