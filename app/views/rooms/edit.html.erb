<h2>施設編集</h2>

<%= render "shared/error", obj: @room %>

<div class="form_area">
  <%= form_with model: @room do |f| %>
    <table>
      <tr>
        <th><%= f.label :name ,"名前" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
  
      <tr>
        <th><%= f.label :introduction ,"施設紹介" %></th>
        <td><%= f.text_field :introduction %></td>
      </tr>
  
      <tr>
        <th><%= f.label :fee ,"料金" %></th>
        <td><%= f.text_field :fee %></td>
      </tr>
  
      <tr>
        <th><%= f.label :address ,"住所" %></th>
        <td><%= f.text_area :address %></td>
      </tr>
      <tr>
        <th><p>現在の登録画像</p></th><br>
        <% if @room.room_image.attached? %>
          <td>
            <%= image_tag @room.room_image, size: '500x300' %>
          </td>
        <% else %>
          <td colspan="2">画像は登録されていません</td>
        <% end%>
      </tr>
      <tr>
        <th><%= f.label :room_image ,"施設画像" %></th>
        <td><%= f.file_field :room_image %></td>
      </tr>
    </table>
  
    <div>
      <ul>
        <li><%= f.submit "登録完了する" %></li>
        <li><%= link_to "トップページに戻る", root_path %></li>
      </ul>
    </div>
  <% end %>
</div>