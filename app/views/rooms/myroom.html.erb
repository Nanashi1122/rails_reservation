<h3>投稿一覧</h3>

<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>施設紹介</th>
      <th>宿泊金額(/日)</th>
      <th>エリア</th>
      <th>住所</th>
      <th>画像</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <% if room.user_id == current_user.id %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.introduction %></td>
          <td><%= room.fee %></td>
          <% if room.area == 1 %>
            <td>東京</td>
          <% elsif room.area == 2 %>
            <td>大阪</td>
          <% elsif room.area == 3 %>
            <td>京都</td>
          <% elsif room.area == 4 %>
            <td>札幌</td>        
          <% end %>
          <td><%= room.address %></td>
          <% if room.room_image.attached? %>
            <td><%= image_tag room.room_image %></td>
          <% else %>
            <td><%= image_tag 'default-room.png' %></td>
          <% end%>
          <td>
            <%= link_to "編集",[:edit, room] %>        
          </td>     
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>