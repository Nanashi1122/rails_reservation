<h3>投稿一覧</h3>

<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>施設紹介</th>
      <th>宿泊金額(/日)</th>
      <th>住所</th>
      <th>施設画像</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <% if room.user_id == current_user.id %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.introduction %></td>
          <td><%= room.fee %></td>
          <td><%= room.address %></td>
          <% if room.room_image.attached? %>
            <td><%= image_tag room.room_image, size: '500x300' %></td>
          <% else %>
            <td><%= image_tag 'default-room.png', size: '500x300' %></td>
          <% end%>
          <td>
            <%= link_to "編集",[:edit, room] %>        
          </td>     
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>